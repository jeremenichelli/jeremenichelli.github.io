{
  "less": {
    "files": "./src/less/{about,blog,error,home,post}.less",
    "output": "./_includes/"
  },
  "bundles": [
    {
      "input": "./src/js/critical.js",
      "output": "./_includes/_js-critical.html"
    },
    {
      "input": "./src/js/font.js",
      "output": "./assets/js/font.js"
    }
  ],
  "favicon": {
    "entry": "./src/favicon/favicon.png",
    "output": "./assets/favicon/",
    "path": "/assets/favicon/",
    "html": "./_includes/favicons.html"
  },
  "images": [
    {
      "entry": "./src/favicon/favicon.png",
      "output": "./assets/images/twitter-card-image.jpeg",
      "quality": 90,
      "resize": [ 240, 240 ]
    }
  ]
}
